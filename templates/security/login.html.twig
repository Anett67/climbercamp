{% extends 'baseSecurity.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="container-fluid">

    <div class="row justify-content-center d-flex">

        <div class="col-10 col-md-5 col-lg-3 block-formulaire">
            {% for message in app.flashes('success') %}
                <div>
                    {{ message }}
                </div>
            {% endfor %}

            <h2>Se connecter</h2>

            {% if error %}

                <div class="error-message">
                    Le login et/ou le mot de passe sont incorrects
                </div>

            {% endif %}

            <form action="{{ path('login') }}" method="POST">
                <div class="form-group">
                    <label for="">Email</label>
                    <input class="input form-control" placeholder="Adresse mail" type="text" name="_username" required>
                </div>
                <div class="form-group">
                    <label for="">Mot de passe</label>
                    <input class="input form-control" type="password" name="_password" required>
                </div>
                {# <div class="ckeckbox mb-3">
                    <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                    <label for="remember_me">Se souvenir de moi</label>
                </div> #}
                <div class="form-group text-center">
                    <input type="submit" class="submit-button">
                </div>
            </form>

            <div class="forgot-password-block text-center">
                <a class="forgot-password-link" href="">J'ai oublié mon mot de passe</a>
            </div>


            <div class="col link-block">
                <div class="text-center">Vous n'est pas encore isncrit?</div>
                <div class="text-center">
                    <a href="{{ path('inscription') }}">Cliquez ici pour créer un compte</a>
                </div>
            </div>
   
        </div>

        <div class="col-lg-6 col-md-7 title-block">

            <div class="row align-items-center justify-content-center">
                <div class="col-2 col-sm-2">
                    <img class="logo-icon img-responsive" src="{{ asset('build/images/icons/climbing-1.png') }}" alt="">
                </div>
                <div class="col-10 col-sm-10">
                    <h1>ClimberCamp</h1>
                    <p class="sous-titre d-none d-sm-block" >Une communauté pour les passionnés de l'escalade</p>
                </div>
            </div>

        </div>

    </div>

</div>
{% endblock %}