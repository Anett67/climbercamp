{% extends 'baseSecurity.html.twig' %}

{% block title %}Page d'inscription{% endblock %}

{% block body %}

<div class="container-fluid">

    <div class="row justify-content-center d-flex">

        <div class="col-12 col-sm-10 col-md-7 col-lg-3 block-formulaire">
            
            <h2>Inscription</h2>

            {{ form_start(form) }}

                {{ form_row(form.email, { 'label': 'Votre addresse mail' ,'attr': {'placeholder': 'example@mail.com'}}) }}
                {{ form_row(form.firstName, { 'label': 'Prénom' ,'attr': {'placeholder': 'Votre prénom'}}) }}         
                {{ form_row(form.lastName, { 'label': 'Nom' ,'attr': {'placeholder': 'Votre nom'}}) }}
                {{ form_row(form.password, { 'label': 'Mot de passe' }) }}
                {{ form_row(form.confirmPassword, { 'label': 'Confirmation du mot de passe' }) }}
                <div class="form-group text-center">
                    <input type="submit" class="submit-button" value="S'inscrire">
                </div>
                
            {{ form_end(form) }}

            <div class="col link-block">
                <div class="text-center">Voue êtes déjà inscrit?
                <div class="text-center"></div>
                    <a href="{{ path('login') }}">Cliquez ici pour vous connecter</a>
                </div>
            </div>
        
        </div>

        <div class="col-12 col-lg-6 col-md-7 title-block">

            <div class="row align-items-center justify-content-center no-gutters">
                <div class="col-2 col-sm-2 pr-2">
                    <img class="logo-icon img-responsive" src="{{ asset('build/images/icons/climbing-1.png') }}" alt="">
                </div>
                <div class="col-10 col-sm-10">
                    <h1 id="login-title">ClimberCamp</h1>
                    <p class="sous-titre d-none d-sm-block" >Une communauté pour les passionnés de l'escalade</p>
                </div>
            </div>

        </div>

    </div>

</div>

{% endblock %}


