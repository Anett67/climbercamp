{% extends 'base.html.twig' %}

{% block title %}Page d'inscription{% endblock %}

{% block body %}

    <h1>Inscription</h1>

    {{ form_start(form) }}
        {{ form_row(form.email, { 'label': 'Votre address mail' ,'attr': {'placeholder': 'example@mail.com'}}) }}
        {{ form_row(form.firstName, { 'label': 'Prénom' ,'attr': {'placeholder': 'Votre prénom'}}) }}         
        {{ form_row(form.lastName, { 'label': 'Nom' ,'attr': {'placeholder': 'Votre nom'}}) }}
        {{ form_row(form.password, { 'label': 'Mot de passe' }) }}
        {{ form_row(form.confirmPassword, { 'label': 'Confirmation du mot de passe' }) }}

        <input type="submit" value="S'inscrire">
    {{ form_end(form) }}



{% endblock %}
