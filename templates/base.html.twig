<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <div class="logo">
                    <a href="{{ path('publications') }}"><img id="logo" src="{{ asset('build/images/icons/Logo.png') }}" alt=""></a> 
                </div>
                <div class="menu-block">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-md-none" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-bars burger"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item text-right" href="{{ path('publications') }}">Accueil</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-right" href="{{path('profil') }}">Mon Profile</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-right" href="{{path('friends') }}">Mes amis</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-right" href="{{ path('clubs') }}">Salles d'escalade</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-right" href="{{ path('messages') }}">Messages</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-right" href="{{ path('saved-events') }}">Évènements enregistrés</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-right" href="{{ path('logout') }}">Déconnexion</a>
                            </div>
                        </li>
                    </ul>
                    <ul class="menu-list d-none d-md-flex">
                        <li class="menu-item"><a class="menu-link" href="{{ path('publications') }}" title="Accueil"><i class="fas fa-home d-none d-md-block"></i></a></li>
                        <li class="menu-item"><a class="menu-link" href="{{path('profil') }}" title="Mon Profil"><i class="fas fa-user d-none d-md-block"></i></a></li>
                        <li class="menu-item"><a class="menu-link" href="{{path('friends') }}" title="Mes amis"><i class="fas fa-users d-none d-md-block"></i></a></li>
                        <li class="menu-item"><a class="menu-link" href="{{path('clubs') }}" title="Salles d'escalade préférées"><i class="fas fa-trophy"></i></a></li>
                        <li class="menu-item"><a class="menu-link" href="{{ path('messages') }}" title="Messages"><i class="far fa-envelope d-none d-md-block"></i></a></li>
                        <li class="menu-item"><a class="menu-link" href="{{ path('saved-events') }}" title="Évènements enregistrés"><i class="far d-none fa-calendar-alt d-md-block"></i></a></li>
                        <li class="menu-item"><a class="menu-link" href="{{ path('logout') }}" title="Déconnexion"><i class="fas fa-sign-out-alt d-none d-md-block"></i></li></a>
                    </ul>
                </div>
            </nav>
            {% block header %}
                <div class="header row justify-content-center align-items-center">
                    <div class="card d-none d-lg-block col-2 text-center">
                        <img class="card-image" src="{{ asset('build/images/' ~ app.user.image) }}" alt="">
                        <div class="card-title"><a href="{{path('profil') }}">{{ app.user.firstName }} {{ app.user.lastName }}</a></div>
                        <div class="card-text">
                            <div>{{ app.user.ville.nom }}</div>
                            <div>Niveau: <span class="level">{{ app.user.level.label }}</span></div>
                            <div>Salles d'escalade:
                                {% for salle in app.user.climbingClub %}
                                    <div><a class="club-link" href="">{{ salle.nom }}</a></div>
                                {% endfor %}
                            </div>
                            <div class="row justify-content-center">
                                {% for type in app.user.climbingCategorie %}
                                    <div class="badge">{{ type.label }}</div>
                                {% endfor %}
                            </div> 
                        </div>
                        <div class="buttons">
                            <a href="{{ path('event-search') }}" class="btn event-button">Chercher des évenements</a>
                            <a href="{{ path('user-search') }}" class="btn grimpeur-button">Chercher des grimpeur</a>
                            <a href="{{ path('club-search') }}" class="btn club-button">Chercher des clubs</a>
                        </div>
                    </div>
                    <div class="image-block d-none d-md-block d-lg-none col-2">
                        {% block image %}
                            <img class="profilPicture" src="{{ asset('build/images/' ~ app.user.image) }}" alt="">
                        {% endblock %}
                    </div>
                    <h1 class="col-8 text-center">{% block pageTitle %}{% endblock %}</h1>
                </div>
            {% endblock %}
        </header>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        {{ encore_entry_script_tags('app') }}
    </body>
</html>
