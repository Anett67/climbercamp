<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <header>
            {% block navbar %}
            <nav>
                <div class="logo">
                    <a href="{{ path('local-posts') }}"><img id="logo" src="{{ asset('build/images/icons/Logo.png') }}" alt=""></a> 
                </div>
                <div class="menu-block">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-md-none" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-bars burger"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item text-right" href="{{path('profil') }}">Mon Profile</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-right" href="{{path('friends') }}">Mes amis</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-right" href="{{ path('saved-clubs') }}">Salles d'escalade</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-right" href="{{ path('messages') }}">Messages</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-right" href="{{ path('saved-events', {'id' : app.user.id}) }}">Évènements enregistrés</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-right" href="{{ path('logout') }}">Déconnexion</a>
                            </div>
                        </li>
                    </ul>
                    <ul class="menu-list d-none d-md-flex">
                        <li class="menu-item"><a class="menu-link" href="{{path('local-posts') }}" title="Accueil">Accueil</a></li>
                        <li class="menu-item"><a class="menu-link" href="{{path('profil') }}" title="Mon Profil">Mon Profil</a></li>
                        <li class="menu-item"><a class="menu-link" href="{{path('friends') }}" title="Mes amis">Mes amis</a></li>
                        <li class="menu-item"><a class="menu-link" href="{{path('saved-clubs') }}" title="Salles d'escalade préférées">Mes salles préférées</a></li>
                        <li class="menu-item"><a class="menu-link {% if app.user.countNewMessages %}new-messages{% endif %}" href="{{ path('messages') }}" title="Messages">Messages {% if app.user.countNewMessages %}({{ app.user.countNewMessages }}){% endif %}</a></li>
                        <li class="menu-item"><a class="menu-link" href="{{ path('saved-events', {'id' : app.user.id}) }}" title="Évènements enregistrés">Évènements enregistrés</a></li>
                        <li class="menu-item"><a class="menu-link" href="{{ path('logout') }}" title="Déconnexion">Déconnexion</li></a>
                    </ul>
                </div>
            </nav>
            {% endblock %}
            {% block header %}
                <div class="header row justify-content-center align-items-center">
                    
                    <div class="card d-none d-lg-block col-2 text-center">
                        <div class="row justify-content-center">
                            <div class="img-cadre m-3">
                                {% if app.user.image %}
                                    <img class="card-image" src="{{ asset('upload/users/' ~ app.user.image) }}" alt="Photo de profile">
                                {% else %}
                                    <img src="{{ asset('upload/default.png') }}" alt="Photo de profile" class="card-image">
                                {% endif %}    
                            </div>
                        </div>
                        <div class="card-title"><a href="{{path('profil') }}">{{ app.user.firstName }} {{ app.user.lastName }}</a></div>    
                        <div class="card-text">
                            <div>{{ app.user.ville.nom }}</div>
                            <div>Niveau: <span class="level">{{ app.user.level.label }}</span></div>
                            <div>Salles d'escalade:
                                {% for salle in app.user.climbingClub %}
                                    <div><a class="club-link" href="{{ path('single-club', {'id': salle.id}) }}">{{ salle.nom }}</a></div>
                                {% endfor %}
                            </div>
                            <div class="row justify-content-center">
                                {% for type in app.user.climbingCategorie %}
                                    <div class="badge">{{ type.label }}</div>
                                {% endfor %}
                            </div> 
                        </div>

                        <div class="buttons">

                            {% if hideProfilButton is not defined %}
                                <a href="{{ path('profil') }}" class="btn event-button">Voir mon profil</a>
                            {% endif %}
                            {% if hideMyEventsButton is not defined %}
                                <a href="{{ path('my-events') }}" class="btn grimpeur-button">Mes évènements</a>
                            {% endif %}
                            {% if hideMyPostsButton is not defined %}
                                <a href="{{ path('my-posts') }}" class="btn club-button">Mes publications</a>
                            {% endif %}
                        </div>
                    </div>

                    <h1 class="col-8 text-center ml-lg-5 pl-lg-5">{% block pageTitle %}{% endblock %}</h1>
                
                </div>
            {% endblock %}
        </header>
        <div class="container">
        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
        {{ encore_entry_script_tags('app') }}
    </body>
</html>
