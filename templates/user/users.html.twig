{% extends 'base.html.twig' %}

{% block title %}Grimpeurs{% endblock %}

{% block pageTitle %}

    {% if ville is defined and ville %}
        Grimpeurs à {{ ville.nom }}
    {% elseif likes is defined and likes %}
        Ceux qui aiment cette publication
    {% elseif event is defined and event %}
        Utilisateurs intéressés
    {% else %}
        Grimpeurs
    {% endif %}


{% endblock %}

{% block body %}

    {% include 'topLinks.html.twig' %}    

    <!-- Formulaire pour chercher des utilisateurs -->
    {% if form is defined %}
        {% include 'user/userSearchForm.html.twig' %}
    {% endif %}
  

    {% if lastUsersPage is defined %}
        <!-- La dernière page de la pagination pour savoir où le scroll infini s'arrête -->
        <input class="users-count" type="hidden" value="{{ lastUsersPage }}">
    {% endif %}
        
        <div class="row justify-content-center justify-content-lg-end">
            <div class="card-container col-11 col-sm-10 mt-3 col-lg-9 p-0">
                <!-- La liste des utilisateur -->
                {% include 'user/user.html.twig' %}
            </div>    
        </div>

{% endblock %}
