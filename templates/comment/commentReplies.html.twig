<!-- C'est le template qui affiche les réponses à une commentaire et sera chargé en AJAX quand on clique sur le bouton 'Réponses' -->


<div class="col-12 mt-2 mb-3">
    <div class="row justify-content-center">
        <div class="col-11">
            <div class="row">
                <div class="col-8">
                    <div class="row align-items-center mb-5">
                        <div class="col-lg-3">
                            <h5 class="m-0">Réponses</h5>
                        </div>
                        <div class="col-lg-6">
                            <a class="btn new-reply-button ml-lg-2 mt-2 mt-lg-0" href="">Je réponds</a>
                        </div> 
                    </div>
                </div>
                <div class="col-4">
                    <a class="hide-replies-button" href="">Cacher les réponses</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulaire pour répondre à un commentaire -->
    <div class="new-reply-form row justify-content-center mb-5">
        <div class="col-11">
            {{form_start(form)}}
                {{form_widget(form)}}
                <div class="row justify-content-end">
                    <div class="col-12 col-md-3">
                        <input type="submit" value="Envoyer" class="btn new-reply-submit-button w-100">
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
    
    <!-- La liste des réponses -->
    {% for reply in replies %}
        
        <div class="row justify-content-around align-items-center reply">
            <div class="col-10">
                <!-- La photo et le nom de l'auteur -->
                <div class="row align-items-start">
                    <div class="img-cadre">
                        {% if reply.postedBy.image %}
                            <img class="postedByImage" src="{{ asset('upload/users/' ~ reply.postedBy.image) }}" alt="">
                        {% else %}
                            <img src="{{ asset('upload/default.png') }}" alt="" class="postedByImage">
                        {% endif %}
                    </div>
                    <div class="col-10">
                        <a class="postedByUsername" href="{{ path('single-user', {'id': reply.postedBy.id}) }}">{{ reply.postedBy.username }} | {{ reply.postedAt|ago }}</a>
                    </div>
                    <!-- Le temps passé depuis la publication -->
                    
                </div>
                <div class="row">
                    {% if reply.postedBy.id == app.user.id %}
                        <div class="comment-icons col-12 text-right">
                            <a href=""><i class="fas fa-edit ml-2 ml-md-3"></i></a>
                            <a
                            
                            {% if reply.postComment is defined %}
                                href="{{ path('postcommentreply-delete', {'id': reply.id}) }}"
                            {% else %}
                                href="{{ path('eventcommentreply-delete', {'id': reply.id}) }}"
                            {% endif %}
                            class="delete-reply"><i class="fas fa-trash-alt ml-2 ml-md-3"></i></a>
                        </div>
                    {% endif %}
                </div>
                <!-- Texte de la réponse -->
                <div class="row justify-content-center">
                    <div class="col-10 mb-2">
                        <p class="reply-body">{{ reply.body }}</p>
                    </div>
                </div>
            </div>
        </div>

        


    {% endfor %}
</div> 